<h1><%=@word.name%></h1>

<form action="/create_definition" method="post">
  <input type="hidden" name="id" value="<%=@word.id%>">
  <input type="text" name="definition">
  <button type="submit" name="button">Add Definition</button>
</form>

<h3>definitions<h3>

  <% @word.definitions.each do |definition| %>
    <li> <%= definition.body %> </li>
  <% end %>
